<main>
  <h1><%= title %></h1>
  <div class="inventory-grid">
    <% if (vehicles && vehicles.length > 0) { %>
      <% vehicles.forEach(function(vehicle) { %>
        <div class="inventory-card">
          <a href="/inv/detail/<%= vehicle.inv_id %>">
            <img src="<%= vehicle.inv_image.replace('.jpg', '-tn.jpg').replace('.png', '-tn.png') %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="inventory-thumb" loading="lazy">
          </a>
          <div class="inventory-info">
            <a href="/inv/detail/<%= vehicle.inv_id %>" class="inventory-title">
              <%= vehicle.inv_make %> <%= vehicle.inv_model %>
            </a>
            <div class="inventory-price">
              $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="no-vehicles">No vehicles found for this classification.</p>
    <% } %>
  </div>
</main>

<style>
.inventory-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
  justify-content: center;
  padding: 1rem 0;
}

.inventory-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  padding: 1.5rem 1rem 1rem;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  max-width: 320px;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.inventory-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.12);
}

.inventory-thumb {
  width: 100%;
  max-width: 260px;
  height: auto;
  border-radius: 8px;
  margin-bottom: 1rem;
  aspect-ratio: 16/9;
  object-fit: cover;
}

.inventory-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  text-decoration: none;
  margin-bottom: 0.5rem;
  display: block;
  transition: color 0.2s ease;
}

.inventory-title:hover {
  color: #ff9900;
  text-decoration: underline;
}

.inventory-price {
  font-size: 1.1rem;
  font-weight: 500;
  color: #333;
  margin-top: 0.5rem;
}

.no-vehicles {
  text-align: center;
  grid-column: 1 / -1;
  padding: 2rem;
  color: #666;
  font-size: 1.1rem;
}

/* Responsive adjustments */
@media (max-width: 1024px) {
  .inventory-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .inventory-grid {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.25rem;
  }
}

@media (max-width: 480px) {
  .inventory-grid {
    grid-template-columns: 1fr;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .inventory-card {
    max-width: 100%;
  }
}
</style>
