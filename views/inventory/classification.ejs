<main>
  <h1><%= title %></h1>
  <div class="inventory-grid">
    <% if (vehicles && vehicles.length > 0) { %>
      <% vehicles.forEach(function(vehicle, idx) { %>
        <% if (idx % 3 === 0) { %><div class="inventory-row"><% } %>
        <div class="inventory-card">
          <a href="/inv/detail/<%= vehicle.inv_id %>">
            <img src="<%= vehicle.inv_image.replace('.jpg', '-tn.jpg').replace('.png', '-tn.png') %>" alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="inventory-thumb">
          </a>
          <div class="inventory-info">
            <a href="/inv/detail/<%= vehicle.inv_id %>" class="inventory-title">
              <%= vehicle.inv_make %> <%= vehicle.inv_model %>
            </a>
            <div class="inventory-price">
              $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %>
            </div>
          </div>
        </div>
        <% if ((idx + 1) % 3 === 0 || idx === vehicles.length - 1) { %></div><% } %>
      <% }) %>
    <% } else { %>
      <p>No vehicles found for this classification.</p>
    <% } %>
  </div>
</main>

<style>
.inventory-grid {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
.inventory-row {
  display: flex;
  gap: 2rem;
  justify-content: center;
}
.inventory-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  padding: 1.5rem 1rem 1rem 1rem;
  text-align: center;
  flex: 1 1 0;
  max-width: 320px;
  min-width: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.2s;
}
.inventory-card:hover {
  box-shadow: 0 4px 16px rgba(0,0,0,0.16);
}
.inventory-thumb {
  width: 100%;
  max-width: 260px;
  height: auto;
  border-radius: 8px;
  margin-bottom: 1rem;
}
.inventory-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  text-decoration: underline;
  margin-bottom: 0.5rem;
  display: block;
}
.inventory-title:hover {
  color: #ff9900;
}
.inventory-price {
  font-size: 1.1rem;
  font-weight: 500;
  color: #333;
  margin-top: 0.5rem;
}
@media (max-width: 900px) {
  .inventory-row {
    flex-wrap: wrap;
    gap: 1rem;
  }
  .inventory-card {
    max-width: 48%;
    min-width: 180px;
  }
}
@media (max-width: 600px) {
  .inventory-row {
    flex-direction: column;
    gap: 1rem;
  }
  .inventory-card {
    max-width: 100%;
    min-width: 0;
  }
}
</style>
